@model List<CrudAppUsingADO.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<h2>Employee List</h2>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Salary</th>
            <th>City</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@count</td>
                <td>@emp.name</td>
                <td>@emp.gender</td>
                <td>@emp.age</td>
                <td>@emp.salary</td>
                <td>@emp.city</td>
                <td>
                    <!-- Edit Button -->
                    <a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="GetEmployeeById" asp-route-id="@emp.Id">Edit</a>

                    <!-- Delete Button -->
                    <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="DeleteEmployee" asp-route-id="@emp.Id"
                       onclick="return confirm('Are you sure you want to delete this employee?');">
                        Delete
                    </a>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

<!-- Buttons Section -->
<div class="mt-3">
    <a class="btn btn-primary" asp-action="AddEmployee" asp-controller="Home">Add New</a>
    <a class="btn btn-success" href="#">Export</a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Back</a>
</div>