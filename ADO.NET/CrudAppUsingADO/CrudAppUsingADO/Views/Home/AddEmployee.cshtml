@model CrudAppUsingADO.Models.EmployeeViewModel

@{
    ViewBag.Title = "Create Employee";
}

<h2>Create Employee</h2>

<form asp-controller="Home" asp-action="SaveEmployee" method="post">
    <div>
        <label asp-for="name"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="gender"></label>
        <input asp-for="gender" class="form-control" />
    </div>

    <div>
        <label asp-for="age"></label>
        <input asp-for="age" class="form-control" type="number" />
    </div>

    <div>
        <label asp-for="salary"></label>
        <input asp-for="salary" class="form-control" type="number" />
    </div>

    <div>
        <label asp-for="city"></label>
        <input asp-for="city" class="form-control" />
    </div>

    <div style="visibility:hidden">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
    </div>


@*     <label hidden asp-for="Id" class="form-control"></label> *@

    <button type="submit">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}